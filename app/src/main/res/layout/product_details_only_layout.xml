<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_details_container"
    android:background="@color/white"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/product_details_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/aqua"
        android:padding="16dp"
        android:text="Product Details"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_details_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Bisleri 20 Litre Water Can – Packaged Drinking Water – Mineral Water Can.
    \n\nCan be stored and consumed for 1 month duration from the date of manufacture.\nBottle comes with sealed package and hence will ensure zero tampering and 100% quality.
    \n\nIngredients: Ozonated Water, Minerals (Magnesium Sulphate, Potassium Bicarbonate)\nNutritional Information (Typical Values per 100ml):\nMagnesium: 0.2mg\nPotassium: 0.1mg
    \n\nEach drop of Bisleri 20 Litre Water Can undergoes a stringent 6-step purification process and hence you will enjoy water that not only quenches your thirst but keeps you healthy as well."
        android:textColor="#485F70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_details_title" />
</androidx.constraintlayout.widget.ConstraintLayout>